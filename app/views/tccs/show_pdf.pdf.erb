%% Resumo do trabalho
<%= render partial: 'abstract', locals: {content: @abstract_content, key_words: @abstract_keywords} %>

% ---
% inserir o sumario
% ---
\pdfbookmark[0]{\contentsname}{toc}
\tableofcontents*
\cleardoublepage
% ---

%% Apresentação do trabalho
<%= render partial: 'presentation', locals: {presentation: @presentation} %>

%% Desenvolvimento (Hubs e suas reflexoes)
<%= render partial: 'hubs' %>

%% Considerações finais
<%= render partial: 'finalconsiderations', locals: {finalconsiderations: @finalconsiderations} %>

%% Referencias
<%= '\bibliography{' + @bibtex +  '}' %>

\end{document}
