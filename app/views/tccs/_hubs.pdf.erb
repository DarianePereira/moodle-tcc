%% Desenvolvimento
\chapter{Desenvolvimento}

%% Para cada eixo
<% @hubs.each do |hub| %>

    %% Imprimir hub_definition de cada Hub
    \section{<%= lesc hub.hub_definition.title %>}

    <% hub.diaries.each do |d| %>

        %% Titulo do Diario
        \subsection {Diário do módulo: <%= lesc d.diary_definition.title %>}
        \par Texto explicativo <%= Faker::Lorem.paragraph(5) %>

        %% Conteudo do diário
        <%= d.content.try(:html_safe) %>

    <% end %>

    %% Imprimir Reflexão
    \subsection {Síntese reflexiva: <%= lesc hub.reflection_title unless hub.reflection_title.nil? %>}


    <%= hub.reflection.try(:html_safe) %>

<% end %>