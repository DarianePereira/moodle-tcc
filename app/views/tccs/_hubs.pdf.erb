%% Desenvolvimento
\chapter{Desenvolvimento}

%% Para cada eixo
<% @hubs.each do |hub| %>

    %% Imprimir hub_definition de cada Hub
    \section{<%= lesc hub.hub_definition.title %>}

    <% hub.diaries.each do |d| %>

        %% Titulo do Diario
        \subsection {<%= lesc d.diary_definition.title %>}
        \par Texto explicativo <%= Faker::Lorem.paragraph(5) %>

        %% Conteudo do diário
        <%= lesc d.content %>

    <% end %>

    %% Imprimir Reflexão
    \subsection {<%= lesc hub.hub_definition.title %>}

    <% hub_tcc = @tcc.hubs.hub_tcc.find_by_position(hub.position) %>
    <%= lesc hub_tcc.reflection unless hub_tcc.reflection.nil? %>

<% end %>