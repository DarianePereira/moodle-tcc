<%= tabs_tag :open_tabs => { :class => 'nav nav-tabs' } do |tab| %>
    <%= tab.data 'Dados', '#', :class => 'active', id: 'data_tab' %>
    <%= tab.abstract 'Resumo', '#', id: 'abstract_tab' %>
    <%= tab.presentation 'Apresentação', '#', id: 'presentation_tab' %>
    <% TCC_CONFIG["hubs"].size.times do |i| %>
        <%= tab.hub "Eixo #{(i+1).to_s}", '#', id: "hub#{(i+1).to_s}_tab" %>
    <% end %>
    <%= tab.final_consideration 'Considerações finais', '#', id: 'final_consideration_tab' %>
    <%= tab.bibliographies 'Referências', '#', id: 'bibliographies_tab' %>
<% end %>