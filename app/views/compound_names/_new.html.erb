<div id="modal-window-new-compound-name" class="modal fade" role="dialog" tabindex="-1"
     aria-labelledby="compound_names" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="compoun_names" class="modal-title"><%= t(:add_compound_name) %></h3>
      </div>

      <%= semantic_form_for CompoundName.new(type_name: 'simple'),
                            url: compound_names_path(moodle_user: params[:moodle_user]),
                            button_html: {method: :post} do |f| %>

        <div class="modal-body">
          <p><%= f.input :name, label: 'Nome composto:' %></p>
          <%= f.input :type_name, as: :radio, collection: [['Normal', 'simple'], ['Sufixo', 'suffix']] %>
        </div>

        <div class="modal-footer">
          <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Fechar</button>
          <%= submit_tag t(:save), class: 'btn btn-success' %>
        </div>

      <% end %>
    </div>
  </div>
</div>