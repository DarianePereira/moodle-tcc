<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Adição de nome composto.</h3>
  </div>

  <div class="modal-body">
    <%= semantic_form_for CompoundName.new, url: compound_names_path(moodle_user: params[:moodle_user]),
                          button_html: {method: :post} do |f| %>
      <p><%= f.input :name, label: 'Nome composto:' %></p>

      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Fechar</button>
        <%= submit_tag 'Salvar', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

</div>