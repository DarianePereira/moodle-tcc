<div id="<%= compound_name.id %>" class="modal hide fade" role="dialog" aria-hidden="true">

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3> <%= t(:edit_compound_name)%> </h3>
  </div>

  <div class="modal-body">
    <%= semantic_form_for compound_name, url: compound_name_path(compound_name, moodle_user: params[:moodle_user]) do |t| %>
      <p><%= t.input :name %></p>
      <%= t.input :type_name, as: :radio, collection: [['Normal', 'simple'], ['Sufixo', 'suffix']] %>

      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Fechar</button>
        <%= submit_tag t(:save), class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

</div>