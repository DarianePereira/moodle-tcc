<div id="<%= compound_name.id %>" class="modal hide fade" role="dialog" aria-hidden="true">

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Edição de nome composto.</h3>
  </div>

  <div class="modal-body">
    <%= semantic_form_for compound_name, url: compound_name_path(compound_name, moodle_user: params[:moodle_user]) do |t| %>
      <p><%= t.input :name, label: 'Nome:' %></p>

      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Fechar</button>
        <%= submit_tag 'Salvar', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

</div>