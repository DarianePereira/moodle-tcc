<h5>Nomes compostos</h5>

<% if @compound_names.count > 0 %>
  <% @compound_names.each_with_index do |element, index| %>
    <% unless element.nil? %>
      <% unless index == @compound_names.size - 1 %>
        <%= element.name %>,
      <% else %>
        <%= ' '+element.name %>
      <% end %>
    <% end %>
  <% end %>
  <br />
<% else %>
  <p>Não há nomes compostos cadastrados.</p>
<% end %>

<%= paginate @compound_names, :params => { anchor: 'compound_names' } %>