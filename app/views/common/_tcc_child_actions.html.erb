<% unless object.draft? || object.admin_evaluation_ok? %>
    <%= f.input :commentary, :as => :text, label: 'Comentário', input_html: {rows: "4", value: ""} %>
    <%= submit_tag 'Devolver para o aluno', name: "draft", class: "btn" %>
    <% if object.sent_to_admin_for_evaluation? %>
        <%= submit_tag 'Avaliado', name: "valued", class: "btn btn-success", confirm: "O estudante não poderá mais editar o texto. Deseja continuar?" %>
    <% end %>
<% end %>