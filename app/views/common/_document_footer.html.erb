<% if can_save || can_send_to_review || can_send_draft_done %>
  <div class="form-actions">
    <%= object_form.action :submit, :as => :input, label: t(:save_document),
                           button_html: {class: 'btn btn-primary', disabled: !can_save} if can_save
    %>
    <%= object_form.action :submit, :as => :input, label: t('activerecord.state_machines.events.to_draft'),
                           button_html: {class: 'btn btn-default', name: 'draft'} if can_send_draft_done
    %>
    <%= object_form.action :submit, :as => :input, label: t('activerecord.state_machines.events.to_review'),
                           button_html: {class: 'btn btn-default', name: 'review',
                                         data: {confirm: t(:warn_message_send_to_review_html)}} if can_send_to_review
    %>
    <%= object_form.action :submit, :as => :input, label: t('activerecord.state_machines.events.to_done'),
                           button_html: {class: 'btn btn-success', name: 'done',
                                         data: {confirm: t(:warn_message_sent_to_done_html)}} if can_send_draft_done
    %>
  </div>
<% end %>

