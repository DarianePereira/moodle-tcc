<div class="span12">
  <div class="rounded-border row">
    <h3 class="pull-left">
      <%= object_label %> -
      <% if @current_user.coordenador_avea? || @current_user.admin? || @current_user.coordenador_curso? %>
        <%= render partial: 'common/states', locals: {object: object, update_state_url: update_state_url} %>
      <% else %>
        <span class="text-info">
          <%= t('states.'+object.aasm_current_state.to_s) %>
        </span>
      <% end %>
    </h3>

    <!-- compare button -->
    <div class="row">
      <div class="span12">
        <%= link_to 'Comparar versões', '#', class: 'btn', id: 'compareTccObjectButtom', onclick: 'compareTccObject()' %>
      </div>
    </div>

    <div class="row">
      <!--old-->
      <div id="old_tcc_object" class="span6" style="display: none">
        <div class="rounded-border">
          <% unless last_object_commented.nil? %>
            <div class="rounded-border">
              <h4>Versão anterior</h4>
              <%= last_object_commented.content.try(:html_safe) %>
            </div>
            <% if object.class == Abstract %>
              <div class="rounded-border">
                <h4>Palavras-chave</h4>
                <%= last_object_commented.key_words.try(:html_safe) %>
              </div>
            <% end %>
            <% unless last_object_commented.commentary.blank? %>
              <div class="rounded-border">
                <h5><i class="icon-comment"></i> Comentário do <%= object_label %> anterior</h5>
                <%= last_object_commented.commentary.try(:html_safe) %>
              </div>
            <% else %>
              <h5 class="text-info">Sem comentário para esta versão</h5>
            <% end %>
          <% else %>
            <h5 class="text-info">Ainda não há versão anterior</h5>
          <% end %>
        </div>
      </div>


      <!--new-->
      <div id="new_tcc_object" class="span12">
        <div class="rounded-border">
          <div class="rounded-border">
            <h4>Versão atual</h4>
            <%= object.content.try(:html_safe) %>
          </div>
          <% if object.class == Abstract %>
            <div class="rounded-border">
              <h4>Palavras-chave</h4>
              <%= object.key_words.try(:html_safe) %>
            </div>
          <% end %>
          <%= semantic_form_for object, url: action_url, method: 'put' do |p| %>
            <%= render partial: 'common/tcc_child_actions_admin', locals: {object: object, f: p} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>