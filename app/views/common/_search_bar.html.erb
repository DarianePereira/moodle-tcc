<%= form_tag path, :method => 'get', :html => {class: ''} do %>
  <div class="input-append">
    <%= autocomplete_field_tag :search, params[:search], autocomplete_path, {
            placeholder: 'Busca', class: 'clearable'} %>

    <%= link_to path, class: 'btn', id: 'clean-search', title: 'Atualizar lista' do %>
      <%= display_icon('icon-remove') %>
    <% end %>

    <%= button_tag :class => 'btn btn-default', name: nil do %>
      <%= display_icon('icon-search') %>
    <% end %>
  </div>

  <div class="pull-right">
    <%= link_to '#', class: 'btn', id: 'refresh-list', title: 'Atualizar lista' do %>
      <%= display_icon('icon-refresh') %>
      Atualizar lista
    <% end %>
  </div>
<% end %>
