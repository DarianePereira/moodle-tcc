<h4>Tela de Tutor para <%= @group_name %> <a class="btn" id="refresh-list" title="Atualizar lista"><i class="icon-refresh"></i></a></h4>

<table class="table table-bordered">
  <thead>
  <tr class="blue-header-table">
    <th>Estudante</th>
    <% TCC_CONFIG['hubs'].size.times do |i| %>
        <th>Eixo <%= i+1 %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @tccs.each do |tcc| %>
      <tr>
        <td><%= tcc.name %></td>
        <% tcc.get_all_hubs.each do |hub| %>
            <td>
              <%= get_state(hub) %> <%= "/ Nota: #{hub.grade} " if hub.admin_evaluation_ok? %>:
              <%= link_to get_action(hub), show_hubs_path(category: (hub.category),
                          moodle_user: tcc.moodle_user), target: '_blank', class: 'label label-success' %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
