<h4>Tela de Tutor <a class="btn" id="refresh-list" title="Atualizar lista"><i class="icon-refresh"></i></a></h4>

<table class="table table-bordered">
  <thead>
  <tr class="blue-header-table">
    <th>Estudante</th>
    <% TCC_CONFIG["hubs"].size.times do |i| %>
        <th>Eixo <%= i+1 %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @tccs.each do |tcc| %>
      <tr>
        <td><%= tcc.name %></td>
        <% TCC_CONFIG["hubs"].size.times do |i| %>
            <td>
              <%= get_hub_state(tcc, (i+1)) %>:
              <%= link_to get_hub_action(tcc, (i+1)), show_hubs_path(category: (i+1),
                          moodle_user: tcc.moodle_user), target: "_blank", class: "label label-success" %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
