<div class="row">
  <%= form_tag instructor_admin_path, method: 'get', html: {class: ''} do %>
    <!-- para garantir a autenticacão -->
    <%= hidden_field_tag 'moodle_user', params[:moodle_user] %>

    <div class="col-lg-5">
      <div class="input-group">
        <%= autocomplete_field_tag :search, params[:search], instructor_admin_autocomplete_tcc_name_path,
                                   {placeholder: 'Busca', class: 'form-control', autofocus: 'autofocus'} %>

        <div class="input-group-btn">
          <%= link_to instructor_admin_path, class: 'btn btn-default', id: 'clean-search', title: 'Eliminar critérios de pesquisa' do %>
            <%= display_icon('remove') %>
          <% end %>

          <%= button_tag class: 'btn btn-default', name: nil, title: 'Filtrar lista' do %>
            <%= display_icon('search') %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-2 col-lg-offset-5">
      <div class="pull-right">
        <%= link_to '#', class: 'btn btn-default', id: 'refresh-list', title: 'Atualizar a lista abaixo' do %>
          <%= display_icon('refresh') %> <%= t(:list_refresh) %>
        <% end %>
      </div>
    </div>

  <% end %>
</div>