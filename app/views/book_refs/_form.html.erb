<%= semantic_form_for @book_ref do |ref| %>
    <div id="data_tab_content">
      <%= ref.inputs do %>
          <div class="span4">
            <%= ref.input :et_all, :label => false, :input_html => {:id => 'et_all'} %>
            <%= ref.input :first_author %>
            <%= ref.input :second_author %>
            <%= ref.input :third_author%>
          </div>
          <div class="span4">
            <%= ref.input :edition_number %>
            <%= ref.input :local %>
            <%= ref.input :type_quantity, :as => :radio, :collection => {'Não informar' => '', 'Número de Páginas' => 'p', 'Número de Volumes' => 'ed'} %>
            <%= ref.input :num_quantity, :input_html => {:disabled => true, :min => 1}, :label => false %>
          </div>
          <div class="span3">
            <%= ref.input :title %>
            <%= ref.input :subtitle %>
            <%= ref.input :year, :input_html => {:min => 0, :max => Date.today.year} %>
            <%= ref.input :publisher %>
          </div>

      <% end %>
      <%= required_fields  %>
      <%= ref.actions :submit %>
    </div>
<% end %>
