<%= semantic_form_for @book_ref, url: polymorphic_path(@book_ref, moodle_user: params[:moodle_user]) do |ref| %>
  <div id="data_tab_content">
    <%= ref.inputs do %>
      <div class="col-lg-4">
        <%= ref.input :et_all, :label => false, :input_html => {:id => 'et_all'} %>
        <%= ref.input :first_author, input_html: {:autofocus => true} %>
        <%= ref.input :second_author %>
        <%= ref.input :third_author %>
      </div>
      <div class="col-lg-4">
        <%= ref.input :edition_number %>
        <%= ref.input :local %>
        <%= ref.input :type_quantity, :as => :radio, :collection => {'Não informar' => '', 'Número de Páginas' => 'p', 'Número de Volumes' => 'ed'} %>
        <%= ref.input :num_quantity, :input_html => {:disabled => true, :min => 1}, :label => false %>
      </div>
      <div class="col-lg-4">
        <%= ref.input :title %>
        <%= ref.input :subtitle %>
        <%= ref.input :year, :input_html => {:min => 0, :max => Date.today.year} %>
        <%= ref.input :publisher %>
      </div>

    <% end %>
    <%= required_fields %>
    <%= ref.actions do %>
      <%= ref.action :submit, button_html: {class: 'btn btn-primary'} %>
      <%= ref.action :cancel, button_html: {class: 'btn btn-default'}, url: bibliographies_path(params[:moodle_user], anchor: 'book') %>
    <% end %>
  </div>
<% end %>
