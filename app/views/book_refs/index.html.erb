<h5>Referências de Livros</h5>
<% if @book_refs.count > 0 %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Autor</th>
        <th>Título</th>
        <th>Subtítulo</th>
        <th>Edição</th>
        <th>Ano</th>
        <th>Editora</th>
        <th>Volumes ou Páginas</th>
        <th>Local (Cidade)</th>
        <th>Ação</th>
      </tr>
      </thead>
      <% @book_refs.each do |element| %>
          <% if !element.nil? %>
              <tr>
                <td><%= element.first_author %></td>
                <td><%= element.title %></td>
                <td><%= element.subtitle %></td>
                <td><%= element.edition_number %></td>
                <td><%= element.year %></td>
                <td><%= element.publisher %></td>
                <td><%= [element.num_quantity, element.type_quantity].join(' ') %></td>
                <td><%= element.local %></td>
                <td>
                  <%= link_to 'Editar', edit_book_ref_path(element.id, :moodle_user => params[:moodle_user]) %>
                  <%= link_to 'Remover', book_ref_path(element, :moodle_user => params[:moodle_user]), :confirm => t(:label_confirm_message), :method => :delete %>
                </td>
              </tr>
          <% end %>
      <% end %>
    </table>
<% else %>
    <p>Não há referências cadastradas.</p>
<% end %>
<%= link_to 'Criar', new_book_ref_path(:moodle_user => params[:moodle_user]), :class => 'btn btn-small' %>


