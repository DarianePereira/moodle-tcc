<% if @current_user.student? %>
    <%= render 'common/tabs_header' %>
    <%= render partial: 'common/tcc_child_form',
               locals: {object: @abstract,
                        object_label: 'Resumo',
                        action_url: abstracts_path,
                        last_object_commented: @last_commented} %>
<% elsif @current_user.orientador? %>
    <%= render partial: 'common/tcc_child_form_orientador',
               locals: {object: @abstract,
                        object_label: 'Resumo - ' + @tcc.name,
                        action_url: abstracts_path(moodle_user: @tcc.moodle_user),
                        last_object_commented: @last_commented} %>
<% else %>
    <%= render partial: 'common/tcc_child_admin',
               locals: {object: @abstract,
                        object_label: 'Resumo - ' + @tcc.name,
                        action_url: abstracts_path(moodle_user: @tcc.moodle_user),
                        update_state_url: update_state_abstracts_path(@abstract, moodle_user: @tcc.moodle_user),
                        last_object_commented: @last_commented} %>
<% end %>