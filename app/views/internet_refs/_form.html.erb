<%= semantic_form_for @internet_ref, url: polymorphic_path(@internet_ref, moodle_user: params[:moodle_user]) do |ref| %>
  <div id="data_tab_content">
    <%= ref.inputs do %>
      <div class="col-lg-4">
        <%= ref.input :et_al, :label => false, :input_html => {:id => 'et_all'} %>
        <%= ref.input :first_author, input_html: {:autofocus => true} %>
        <%= ref.input :second_author %>
        <%= ref.input :third_author %>
      </div>
      <div class="col-lg-4">
        <%= ref.input :title %>
        <%= ref.input :subtitle %>
        <%= ref.input :url %>
      </div>
      <div class="col-lg-4">
        <%= ref.input :publication_date, :as => :string, hint: 'Formato: dd/mm/aaaa',
                      input_html: {data: {behaviour: 'datepicker'},
                                   value: ((I18n.l @internet_ref.publication_date) unless @internet_ref.publication_date.nil?)} %>
        <%= ref.input :access_date, :as => :string, hint: 'Formato: dd/mm/aaaa',
                      input_html: {data: {behaviour: 'datepicker'},
                                   value: ((I18n.l @internet_ref.access_date) unless @internet_ref.access_date.nil?)} %>
        <%= ref.input :complementary_information %>
      </div>
    <% end %>
    <%= required_fields %>
    <%= ref.actions do %>
      <%= ref.action :submit, button_html: {class: 'btn btn-primary'} %>
      <%= ref.action :cancel, button_html: {class: 'btn btn-default'}, url: bibliographies_path(params[:moodle_user], anchor: 'internet') %>
    <% end %>
  </div>
<% end %>