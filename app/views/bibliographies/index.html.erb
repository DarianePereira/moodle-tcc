<h3>Referências</h3>
<div>
<% if @references.count > 0 %>
      <table class="table">
        <thead>
        <tr>
          <th>Citação direta</th>
          <th>Citação indireta</th>
          <th>Texto</th>
          <th>Ação</th>
        </tr>
        </thead>
      <% @references.each do | element | %>
            <% if !element.nil? %>
            <tr>
            <td><%= element.direct_citation %></td>
            <td><%= element.indirect_citation  %></td>
            <td><%= element.reference_text  %></td>
            <td>
              <%= link_to 'Editar', :controller => element.class.to_s.tableize, :action => 'edit', :id => element.id %>
              <%= link_to 'Remover', general_ref_path(element), :confirm => 'Are you sure?', :method => :delete %>
            </td>
          </tr>
          <% end %>
      <% end %>
      </table>
<% else %>
  <p>Não há referências cadastradas.</p>
<% end %>
</div>
<%= link_to 'Criar nova referências', new_bibliography_path, :class => 'btn' %>
