<%= semantic_form_for @hub, url: save_hubs_path(category: @hub.category, moodle_user: @tcc.moodle_user) do |h| %>
    <!--diaries-->
    <%= render partial: "diaries", locals: {h: h, accordion_type: "admin_view"} %>

    <div class="span12">
      <div class="rounded-border row">
        <span>
          <a class="btn" id="compareTccObjectButtom" onclick="compareTccObject()">Comparar versões</a>
        </span>

        <div class="row">
          <!--old-->
          <div id="old_tcc_object" class="span6" style="display: none">
            <div class="rounded-border">
              <% unless @last_hub_commented.nil? %>
                  <div class="rounded-border">
                    <h4>Versão anterior da reflexão</h4>
                    <%= @last_hub_commented.reflection.html_safe %>
                  </div>
                  <% unless @hub.commentary.blank? %>
                      <div class="rounded-border">
                        <h5><i class="icon-comment"></i> Comentário da reflexão anterior</h5>
                        <%= @hub.commentary.html_safe %>
                      </div>
                  <% else %>
                      <h5 class="text-info">Sem comentário para esta versão</h5>
                  <% end %>
              <% else %>
                  <h5 class="text-info">Ainda não há versão anterior</h5>
              <% end %>
            </div>
          </div>

          <!--new-->
          <div id="new_tcc_object" class="span12">
            <div class="rounded-border">
              <div class="rounded-border">
                <h4>Versão atual da reflexão</h4>
                <%= @hub.reflection.html_safe %>
              </div>
              <% unless @hub.draft? || @hub.admin_evaluation_ok? %>
                  <% if @hub.sent_to_admin_for_evaluation? %>
                      <%= h.input :grade, :as => :number, label: "Nota (de 0 à 10)" %>
                  <% end %>
                  <%= h.input :commentary, :as => :text, label: 'Comentário', input_html: {rows: "4", value: ""} %>
                  <%= submit_tag 'Enviar para rascunho', name: "draft", class: "btn" %>
                  <% if @hub.sent_to_admin_for_evaluation? %>
                      <%= submit_tag 'Avaliado', name: "valued", class: "btn" %>
                  <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>

