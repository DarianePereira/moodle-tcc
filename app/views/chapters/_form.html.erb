<%= semantic_form_for @chapter, url: save_chapters_path(position: @chapter.position) do |h| %>
  <%= h.input :position, :as => :hidden %>

  <div class="row">
    <div class="rounded-border">
      <h3>
        <%= @chapter.chapter_definition.title %>
        <%= " - #{@tcc.student.name}" if policy(@tcc).show_student? %>
      </h3>

      <%= h.cktext_area :content %>
      <br/>
      <%= semantic_form_for @chapter_comment, url: chapter_comments_path(@chapter_comment,
                                                                         moodle_user: params[:moodle_user]) do |t| %>
        <%= t.input :comment, input_html: {rows: '3',
                                           class: 'span12',
                                           style: 'width:98%; max-width:98%;',
                                           disabled: !policy(@chapter).edit_comment?,
                                           maxlength: '5000'
        } %>
      <% end %>

      <div class="form-actions">
        <%= h.action :submit, :as => :input, label: 'Salvar Texto',
                     button_html: {class: 'btn btn-primary'} %>
      </div>
    </div>
  </div>

<% end %>