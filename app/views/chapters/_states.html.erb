<div style="margin-top: 15px;">
  <%= semantic_form_for @chapter, :url => update_state_hubs_path(position: @chapter.position, moodle_user: @tcc.moodle_user) do |h| %>
      <div style="margin-left: 10px;" class="pull-left"><%= h.input :new_state, :label => false, :as => :select, :collection => @chapter.class.new_states_collection %></div>
      <span style="margin-left: 10px;"><%= h.action :submit, :label => 'Alterar estado' %></span>
  <% end %>
  <h4><%= "Nota: #{@chapter.grade}" if @chapter.admin_evaluation_ok? %></h4>
</div>
