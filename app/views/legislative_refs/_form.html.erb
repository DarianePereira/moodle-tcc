<%= semantic_form_for @legislative_ref, url: polymorphic_path(@legislative_ref, moodle_user: params[:moodle_user]) do |ref| %>
    <div id="data_tab_content">
      <%= hidden_field_tag 'moodle_user', j(params[:moodle_user]) unless params[:moodle_user] %>
      <%= ref.inputs do %>
          <div class="span12">
            <div class="span3">
              <%= ref.input :jurisdiction_or_header %>
              <%= ref.input :title %>
              <%= ref.input :edition %>
              <%= ref.input :local %>
            </div>
            <div class="span3">
              <%= ref.input :publisher %>
              <%= ref.input :year %>
              <%= ref.input :total_pages, :input_html => { :min => 0 }%>
            </div>
          </div>
      <% end %>
      <%= required_fields  %>
      <%= ref.actions :submit %>
    </div>
<% end %>