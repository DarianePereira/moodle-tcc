<h1>Listing internal_courses</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Department name</th>
      <th>Center name</th>
      <th>Coordinator name</th>
      <th>Presentation data</th>
      <th>Approval data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @internal_courses.each do |internal_course| %>
      <tr>
        <td><%= internal_course.course_name %></td>
        <td><%= internal_course.department_name %></td>
        <td><%= internal_course.center_name %></td>
        <td><%= internal_course.coordinator_name %></td>
        <td><%= internal_course.presentation_data %></td>
        <td><%= internal_course.approval_data %></td>
        <td><%= link_to 'Show', internal_course %></td>
        <td><%= link_to 'Edit', edit_internal_course_path(internal_course) %></td>
        <td><%= link_to 'Destroy', internal_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

